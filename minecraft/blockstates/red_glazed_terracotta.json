{
	"multipart": [
        {
			"apply": { "model": "block/drawer_top", "uvlock": true }
		},
        {   "when": { "facing": "north" },
            "apply": { "model": "block/drawer" }
        },
        {   "when": { "facing": "east" },
            "apply": { "model": "block/drawer", "y": 90 }
        },
        {   "when": { "facing": "south" },
            "apply": { "model": "block/drawer", "y": 180 }
        },
        {   "when": { "facing": "west" },
            "apply": { "model": "block/drawer", "y": 270 }
        }
    ]
}