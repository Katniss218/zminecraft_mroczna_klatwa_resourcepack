{
	"multipart": [
        {
			"apply": { "model": "block/standalone_drawer_top", "uvlock": true }
		},
		{
			"apply": { "model": "block/standalone_drawer_bottom", "uvlock": true }
		},
        {   "when": { "facing": "north" },
            "apply": { "model": "block/standalone_drawer" }
        },
        {   "when": { "facing": "east" },
            "apply": { "model": "block/standalone_drawer", "y": 90 }
        },
        {   "when": { "facing": "south" },
            "apply": { "model": "block/standalone_drawer", "y": 180 }
        },
        {   "when": { "facing": "west" },
            "apply": { "model": "block/standalone_drawer", "y": 270 }
        }
    ]
}